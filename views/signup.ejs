<%- include('partials/header.ejs') %>
      <div class="w3-content w3-cell-row w3-margin-top">
            <div class="w3-cell  w3-container w3 w3-padding-32 w3-mobile">
                  <h1 class="w3-center">Sheger Travel</h1>
                  <p class="w3-center">Your journey starts here!</p>
                  <div class="w3-center">
                        <img src="/AddisTravel/images/destinations/paris.png" alt="">
                  </div>
            </div>

            <div class="w3-cell w3-mobile">
                  <h2 class="w3-center">Signup</h2>
                  <form class="w3-container" action="/AddisTravel/pages/account/signup.html" method="post">
                        <label for="name" class="w3-tiny">Name:</label>
                        <input class="w3-input w3-border" type="text" id="name" name="name" required>

                        <label for="email" class="w3-tiny">Email:</label>
                        <input class="w3-input w3-border" type="email" id="email" name="email" required>

                        <label for="phone" class="w3-tiny">Phone Number:</label>
                        <input class="w3-input w3-border" type="tel" id="phone" name="phone">

                        <label for="password" class="w3-tiny">Password:</label>
                        <input class="w3-input w3-border" type="password" id="password" name="password" required>

                        <label for="confirm_password" class="w3-tiny">Confirm Password:</label>
                        <input class="w3-input w3-border" type="password" id="confirm_password" name="confirm_password"
                              required>

                        <button class="w3-button w3-blue w3-margin-top w3-block" type="submit">Signup</button>

                        <p class="w3-center">Already have an account? <a href="/login">Login</a></p>
                        <p class="w3-center">Or signup with:</p>
                        <div class="w3-center w3-margin-">
                              <a href="/AddisTravel/pages/account/google_signup.html"
                                    class="w3-button w3-red">Google</a>
                              <a href="/AddisTravel/pages/account/facebook_signup.html"
                                    class="w3-button w3-blue">Facebook</a>
                              <a href="/AddisTravel/pages/account/twitter_signup.html"
                                    class="w3-button w3-light-blue">Twitter</a>
                        </div>
                  </form>
            </div>
      </div>


      <!-- footer with copyright -->

      <%- include('partials/footer.ejs') %>